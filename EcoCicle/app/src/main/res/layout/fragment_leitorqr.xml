<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.e2g.ecocicle.LeitorQrFragment"
    android:background="#ffffff"
    android:padding="10pt">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="2pt">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:background="@drawable/background_evento">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView3"
                android:src="@drawable/logo_qr" />
        </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="@drawable/background_evento"
        android:padding="5pt"
        android:layout_marginTop="5pt">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Read QR"
            android:id="@+id/btnReadQr"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:nestedScrollingEnabled="false"
            android:background="@drawable/default_button_selector" />

